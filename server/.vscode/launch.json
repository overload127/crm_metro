    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Текущий файл",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django site (localhost)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "127.0.0.1:8000",
                "--noreload",
            ],
            "django": true
        },
        {
            "name": "Python: Django site (0.0.0.0)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload",
            ],
            "django": true
            // "justMyCode": false
        },
        {
            "name": "Python: Django bot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "bot",
            ],
            "django": true
        },
    ]
}